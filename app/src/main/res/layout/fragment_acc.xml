<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.example.kerbe.newtt.AccFragment">

    <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/u"
                    android:background="#50000000"
                    />
                <TextView
                    android:id="@+id/acc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kerbez"
                    android:textColor="@color/wforg"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/acc_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kerbez2898@gmail.com"
                    android:textColor="@color/wforg"
                    android:textSize="13sp"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/acc64"
                        android:tint="@color/wforg"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/wforg"
                        android:text="My CV"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/acc_list"
                        android:tint="@color/wforg"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/wforg"
                        android:text="Student list" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/wforg"
                    android:text="SDU"
                    android:layout_margin="10dp"/>
                <View style="@style/Divider"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/wforg"
                    android:text="VTandPO"
                    android:layout_margin="10dp"/>

                <View style="@style/Divider"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/wforg"
                    android:text="2EN04E"
                    android:layout_margin="10dp"/>
                <View style="@style/Divider"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </ScrollView>


</FrameLayout>
